{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["./src/*"],
      "@contracts/*": ["./src/contracts/*"],
      "@contracts": ["./src/contracts"],
      "@clients": ["./src/clients"],
      "@env": ["./src/env"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
